{
    "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",

    "inPlace": true,

    "testRunner": "jest",

    "mutate": [
        "src/controllers/dashBoard/addTransaction.controller.js",
        "src/controllers/dashBoard/getNews.controller.js",
        "src/controllers/dashBoard/portfolioCalculation.controller.js",
        "src/controllers/dashBoard/stockAllocation.controller.js",
        "src/controllers/dashBoard/userStockSummary.controller.js",
        "src/controllers/dashBoard/watchlist.controller.js"
    ],
    "mutator": {
        "excludedMutations": ["StringLiteral","ObjectLiteral","FunctionCall","MethodCall","OptionalChaining"]
    },

    "reporters": ["html", "clear-text", "progress"],

    "disableTypeChecks": true,
    "coverageAnalysis": "off",

    "jest": {
        "enableFindRelatedTests": true,
        "projectType": "custom",
        "config": {
            "clearMocks": true,
            "resetMocks": true,
            "restoreMocks": true,
            "cache": false,
            "testEnvironment": "node",

            "transform": {
                "^.+\\.js$": "babel-jest"
            },

            "testMatch": ["**/test/src/controllers/dashBoard/*.test.js","!**/test/src/controllers/dashBoard/searchStock.test.js"]
        }
    }

}
